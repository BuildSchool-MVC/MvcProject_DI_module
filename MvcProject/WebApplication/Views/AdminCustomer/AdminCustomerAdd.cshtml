@model WebApplication.Models.SignupModel
@{
    ViewBag.Title = "AdminCustomerAdd";
    Layout = "~/Views/Shared/AdminMain.cshtml";
}

<div class="section__content section__content--p30">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <h3 align="center">新增客戶</h3>
            <span style="color:red">@ViewBag.Msg</span>
            <br>
            <div class="row">
                <div class="col-2">
                </div>
                <div class="col-6">
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputCustomername" class="col-sm-3 col-form-label">客戶名稱：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" Name="CustomerName">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputbirthday" class="col-sm-3 col-form-label">生日：</label>
                        <div class="col-sm-9">
                            <input type="date" id="bookdate" class="form-control" Name="Birthday">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputAccount" class="col-sm-3 col-form-label">帳號：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Account">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputpassword" class="col-sm-3 col-form-label">密碼：</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" name="Password">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputphone" class="col-sm-3 col-form-label">電話：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Phone">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputEmail" class="col-sm-3 col-form-label">Email：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Email">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputShoppingCash" class="col-sm-3 col-form-label">購物金：</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="ShoppingCash">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col" align="center">
                    <button class="btn btn-primary" type="submit" id="insert">
                        <i class="fas fa-check"></i>確認
                    </button>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("AdminCustomer", "AdminCustomer")'">
                        <i class="fas fa-times"></i>取消
                    </button>
                </div>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    document.getElementById("insert").onclick = function () {
        if (window.confirm('您確定要新增嗎？') == true) {
            return true;
        } else {
            return false;
        }
    }
</script>

