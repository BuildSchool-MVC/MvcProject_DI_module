
@{
    ViewBag.Title = "AdminCustomerAdd";
    Layout = "~/Views/Shared/AdminMain.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h3>新增客戶</h3>
            <br>
            <div class="row">
                <div class="col-2">
                </div>
                <div class="col-6">
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputCustomername" class="col-sm-3 col-form-label">客戶名稱：</label>
                        <div class="col-sm-9">
                            <input type="Customername" class="form-control" id="inputCustomername" placeholder="Customer name">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputbirthday" class="col-sm-3 col-form-label">生&emsp;&emsp;日：</label>
                        <div class="col-sm-9">
                            <input type="birthday" class="form-control" id="inputbirthday" placeholder="birthday">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputAccount" class="col-sm-3 col-form-label">帳&emsp;&emsp;號：</label>
                        <div class="col-sm-9">
                            <input type="Account" class="form-control" id="inputAccount" placeholder="Account">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputpassword" class="col-sm-3 col-form-label">密&emsp;&emsp;碼：</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="inputpassword" placeholder="password">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputphone" class="col-sm-3 col-form-label">電&emsp;&emsp;話：</label>
                        <div class="col-sm-9">
                            <input type="phone" class="form-control" id="inputphone" placeholder="phone">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputEmail" class="col-sm-3 col-form-label">Email：</label>
                        <div class="col-sm-9">
                            <input type="Email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row" style="text-align: right;">
                        <label for="inputShoppingCash" class="col-sm-3 col-form-label">購物金：</label>
                        <div class="col-sm-9">
                            <input type="ShoppingCash" class="form-control" id="inputShoppingCash" placeholder="ShoppingCash">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-9">
                </div>
                <div class="col" style="text-align: left;">
                    <a href="/Admin/customer" class="btn btn-primary">
                            <i class="fas fa-check"></i>&ensp;確認
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
