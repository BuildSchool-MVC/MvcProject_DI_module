
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Main.cshtml";
}

@{ 
    int Bestcount = Convert.ToInt32(ViewData["Bestcount"]);
    var BestProductsPath = ViewData["BestProductsList2"] as List<string>;
    var BestProductsName = ViewData["BestProductsName"] as List<ModelsLibrary.DtO_Models.Products>;
    int Newcount = Convert.ToInt32(ViewData["Newcount"]);
    var NewProductsPath = ViewData["NewProductsList2"] as List<string>;
    var NewProductsName = ViewData["NewProductsName"] as List<ModelsLibrary.DtO_Models.Products>;
}
<div class="container-fluid">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="4000">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/m3.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/m1.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/m2.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">
            <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/c4.jpg" alt="Second slide">
        </div>
        <div class="col">
            <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/c1.jpg" alt="Second slide">
        </div>
        <div class="col">
            <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/c4.jpg" alt="Second slide">
        </div>
        <div class="col">
            <img class="d-block w-100" src="https://www.forever21.com/eu/shop/_common/images/en/20180519/c1.jpg" alt="Second slide">
        </div>
    </div>
    <br>
</div>
<div class="row mt-5">
    <div class="col">
        <hr />
    </div>
    <div class="col-2" align="center">
        <h3>New Arrivals</h3>
    </div>
    <div class="col">
        <hr />
    </div>
</div>
<div class="container">
    <div id="wrapper">
        <div class="slidePanel">
            <ul>
                @for (int i = 0; i < Newcount; i++)
                {
                    <li>
                        <a href="/Product/@NewProductsName[i].ProductName">
                            <img src=@NewProductsPath[i]>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <!--/.slidePanel-->
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <hr />
    </div>
    <div class="col-2" align="center">
        <h3>Best Sellers</h3>
    </div>
    <div class="col">
        <hr />
    </div>
</div>
<div class="container">
    <div id="wrapper">
        <div class="slidePanel2">
            <div class="slidePanel">
                <ul>
                    @for (int i = 0; i < Bestcount; i++)
                    {
                <li>
                    <a href="/Product/@BestProductsName[i].ProductName">
                        <img src=@BestProductsPath[i]>
                    </a>
                </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>


