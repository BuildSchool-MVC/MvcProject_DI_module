@model WebApplication.Models.UpdatePasswordModel
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/Main.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br> <br>
    <div class="container-fluid">
        <div style="text-align:center;">
            <a href="/Member/UpdateMember" class="btn btn-light btn-lg">個人資料修改</a>
            <button type="button" class="btn btn-dark btn-lg">密碼修改</button>
            <br>
            <div>
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Password2, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col">
                <br>
                <h3 style="text-align:center;">密碼修改</h3>
                <hr>
                <div class="form-group row">
                    <label for="inputAccount" class="col-sm-3 col-form-label" style="text-align: right;">填入新密碼</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-3 col-form-label" style="text-align: right;">新密碼確認</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(model => model.Password2, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
        <br>
        <div style="text-align:center;">
            <button type="submit" class="btn btn-dark" style="width: 100px">變更密碼</button>
        </div>
    </div>
}