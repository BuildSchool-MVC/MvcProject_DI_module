@model WebApplication.Models.AdminProductUpdate
@{
    ViewBag.Title = "AdminProductUpdate";
    Layout = "~/Views/Shared/AdminMain.cshtml"; ;
    var list = ViewData["list"] as ModelsLibrary.DtO_Models.Products;
    var photo = ViewData["photo"] as List<ModelsLibrary.DtO_Models.ProductPhoto>;
}

<style>
    .table td,
    .table th {
        vertical-align: baseline;
    }
</style>
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <h3>
            更改產品資訊
            <button type="button" class="btn btn-sm btn-danger ml-5">商品下架</button>
        </h3>
        <br>
        <div class="row">
            <div class="col-6">
                <table class="table">
                        <tr>
                            <td width="110px">產品編號：</td>
                            <td>@list.ProductID</td>
                        </tr>
                        <tr>
                            <td>產品名稱：</td>
                            <td>
                                @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", value = list.ProductName })
                                @Html.ValidationMessageFor(model => model.ProductName, null, new { @class = "text-danger" })
                                @*<input type="text" class="form-control" name="ProductName" value="@list.ProductName">*@
                            </td>
                        </tr>
                        <tr>
                            <td>類別編號：</td>
                            <td>
                                <input type="text" class="form-control" name="ProductName" value="@list.CategoryID">
                            </td>
                        </tr>
                        <tr>
                            <td>單&emsp;&emsp;價：</td>
                            <td>
                                <input type="text" class="form-control" name="ProductName" value="@Decimal.Round(list.UnitPrice)">
                            </td>
                        </tr>
                        <tr>
                            <td>庫&emsp;&emsp;存：</td>
                            <td>
                                <input type="text" class="form-control" name="ProductName" value="@list.UnitsInStock">
                            </td>
                        </tr>
                        <tr>
                            <td>尺&emsp;&emsp;寸：</td>
                            <td>
                                <input type="text" class="form-control" name="ProductName" value="@list.Size">
                            </td>
                        </tr>
                        <tr>
                            <td>顏&emsp;&emsp;色：</td>
                            <td>
                                <input type="text" class="form-control" name="ProductName" value="@list.Color">
                            </td>
                        </tr>
                        <tr>
                            <td>說&emsp;&emsp;明：</td>
                            <td>
                                <input type="text" class="form-control" name="ProductName" value="@list.ProductDetails">
                            </td>
                        </tr>
                </table>
            </div>
            <div class="col-6">
                <table class="table">
                    <tr>
                        <td width="110px">圖&emsp;&emsp;片：</td>
                        <td>
                            <input type="file" name="file">
                        </td>
                    </tr>
                    @foreach (var item in photo)
                    {
                        <tr>
                            <td>
                                <p>照片編號：</p>
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-3">
                                        <input type="text" class="form-control" name="productphoto" value="@item.PhotoID" disabled>
                                    </div>
                                    <div class="col">
                                        <input type="text" class="form-control" name="url" value="@item.PhotoPath">
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-9">
            </div>
            <div class="col mt-5 mb-5" style="text-align: left;">
                <a href="/Admin/Product" class="btn btn-primary mr-2">
                    <i class="fas fa-check"></i>&ensp;確認
                </a>
                <a href="/Admin/Product" class="btn btn-danger mr-2">
                        <i class="fas fa-times"></i>&ensp;取消
                </a>
            </div>
        </div>
    </div>
</div>