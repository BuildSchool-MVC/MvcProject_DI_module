
@{
    ViewBag.Title = "AdminProductUpdate";
    Layout = "~/Views/Shared/AdminMain.cshtml"; ;
    var list = ViewData["list"] as ModelsLibrary.DtO_Models.Products;
    var photo = ViewData["photo"] as List<ModelsLibrary.DtO_Models.ProductPhoto>;
}

<style>
    .table td,
    .table th {
        vertical-align: baseline;
    }
</style>
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h3>
                更改產品資訊
                <button type="button" class="btn btn-sm btn-danger ml-5">商品下架</button>
            </h3>
            <br>
            <div class="row">
                <div class="col">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td class="text-center">產品編號：</td>
                                <td class="text-center">@list.ProductID</td>
                            </tr>
                            <tr>
                                <td class="text-center">產品名稱：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.ProductName">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">類別編號：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.CategoryID">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">單&emsp;&emsp;價：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.UnitPrice">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">庫&emsp;&emsp;存：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.UnitsInStock">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">尺&emsp;&emsp;寸：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.Size">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">顏&emsp;&emsp;色：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.Color">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">說&emsp;&emsp;明：</td>
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" value="@list.ProductDetails">
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">圖&emsp;&emsp;片：</td>
                                @*@foreach(var item in photo)
        {
        <p>@item.PhotoID</p>
        <p>@item.PhotoPath</p>
        }*@
                                <td class="text-center">
                                    <input type="text" class="form-control" name="ProductName" placeholder="ProductName">
                                </td>
                                <td>
                                    <input type="file" class="btn" name="upload" size="20" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-9">
                </div>
                <div class="col mt-5 mb-5" style="text-align: left;">
                    <button type="button" class="btn btn-primary mr-2">
                        <i class="fas fa-check"></i>&ensp;確認
                    </button>
                    <button type="button" class="btn btn-danger">
                        <i class="fas fa-times"></i>&ensp;取消
                    </button>
                </div>
            </div>
        </div>
    </div>