@model ModelsLibrary.ViewModels.ProductList
@{
    Layout = "~/Views/Shared/Main.cshtml";

}
<br />
<br />
<br />
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            @foreach (var item in Model.PhotoPath)
            {
                <div class="row">
                    <div class="col">
                        <img class="btnFollow" style="max-width: 100%;" src=@item />
                    </div>
                </div>
            }
        </div>
        <div class="col-4">
            <img id="chgicon" class="btnFollow" style="max-width: 100%;" src=@Model.PhotoPath[0] />
        </div>
        <div class="col-4">
            <h3>@Model.ProductName </h3>
            <br />
            <h3>
                <b>NT$@Model.UnitPrice </b>
            </h3>
            <br />
            <p class="lead">
                @Model.ProductDetails
            </p>
            <br />
            <br />
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                        尺寸
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        @foreach (var item in @Model.Size)
            {
                <a class="dropdown-item" href="#" id="size">@item</a>
}
                    </div>
                </div>
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop3" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                        顏色
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop3">
                        @foreach (var item in @Model.Color)
            {
                <a class="dropdown-item" href="#" id="color">@item</a>
}
                    </div>
                </div>
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop2" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                        數量
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                        <a class="dropdown-item" href="#" id="num">1</a>
                        <a class="dropdown-item" href="#" id="num">2</a>
                        <a class="dropdown-item" href="#" id="num">3</a>
                        <a class="dropdown-item" href="#" id="num">4</a>
                        <a class="dropdown-item" href="#" id="num">5</a>
                    </div>
                </div>
                <button type="button" class="btn btn-light">ADD TO CART</button>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>
</div>
<br /><br /><br />
<script type="text/javascript">
    $(document).ready(function () {
        $(".btnFollow").click(function () {
            $("#chgicon").attr("src", $(this).attr("src"));
        });

        $(".dropdown-menu #size").click(function () {
            $("#btnGroupDrop1").text($(this).text());
        });

        $(".dropdown-menu #num").click(function () {
            $("#btnGroupDrop2").text($(this).text());
        });

        $(".dropdown-menu #color").click(function () {
            $("#btnGroupDrop3").text($(this).text());
        });

    });
</script>

